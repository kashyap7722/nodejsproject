<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BookMyTicket | Action</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-secondary">
    <%- include("../views/partial/adminnavbar.ejs") %>
    <h1 class="text-center text-warning">Manage Movies Here..</h1>
    <table class="table container justify-content-center">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Movie Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((element,id) => { %>
           <tr>
            <td><%= id+1%></td>
            <td><%= element.name%></td>
            <td><button class="btn btn-danger"><a href="/delete?id=<%= element.id %>" style="text-decoration: none; color: white;"><i class="fa-solid fa-trash-can fa-beat-fade"></i></a></button>
                <button class="btn btn-warning"><a href="/edit?id=<%= element.id %>" style="text-decoration: none; color: white;"><i class="fa-regular fa-pen-to-square fa-beat-fade"></i></a></button>
            
            </td>

           </tr>
          <% }) %>
        </tbody>
      </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>