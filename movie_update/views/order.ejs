<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BookMyTicket | Order</title>
    <link rel="stylesheet" href="/css/order.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
  </head>
  <body class="bg-info">
    <%- include("../views/partial/usernavbar.ejs") %>
    <h1 class="text-center text-light">Your Orders..</h1>
    <div class="container">
        <div class="row d-flex justify-content-between">
            <% fds.forEach((element) => { %>
                <div class="card text-bg-dark border border-3 col-lg-5 mt-3 bx">

                    <div class="card-header fs-2 border-bottom border-warning"><%= element.movie %></div>
                    <div class="card-body">
                      <h6 class="card-title">Person: <%= element.person %></h6>
                      <h6 class="card-title">Mobile: <%= element.mobile %></h6>

                      <h6 class="card-title">Price: <%= element.price %></h6>
                      <h6 class="card-title">Seat: <%= element.seat %></h6>
                      <h6 class="card-title">Total: <%= element.price *  element.seat %></h6>
                      <h6 class="card-title">Date: <%= element.date %></h6>
                      <h6 class="card-title">ShowTime: <%= element.time %></h6>

                      <button class="btn btn-danger"><a style="color: white;text-decoration: none;" href="/remove?id=<%= element.id %>">Remove Order</a></button>
                    </div>
                  </div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>