<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BookMyTicket | Book</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
 

  <body>
    <%- include("../views/partial/usernavbar.ejs") %>
   <h2 class="text-center">Book Your Tickets Here..</h2>
   <form class="container" method="post" action="/book">
    <input type="hidden" name="id" value="<%= mv.id %>">
    <div class="mb-3">
      <img src="<%= mv.image %>" name="file" class="mx-auto d-block" height="200px" width="200px" alt="">
      </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <input type="text" name="person"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Mobile Number</label>
      <input type="text" name="mobile"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>

    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Movie Name</label>
      <input type="text" name="mname" value="<%= mv.name %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Price</label>
      <input type="text" name="price" class="form-control" value="<%= mv.price %>" id="exampleInputPassword1">
    </div> 
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">How Many Seats?</label>
      <input type="text" name="seat" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Booking Date</label>
      <input type="date" name="date" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label d-block">Time</label>
  <button class="btn btn-success"><input type="checkbox" name="time" value="10:00 A.M" id=""> 10:00 A.M</button>
  <button class="btn btn-success"><input type="checkbox" name="time" value="1:00 P.M" id=""> 1:00 P.M</button>   
   <button class="btn btn-success"><input type="checkbox" name="time" value="4:00 P.M" id=""> 4:00 P.M</button>   
    <button class="btn btn-success"><input type="checkbox" name="time" value="7:00 P.M" id=""> 7:00 P.M</button>    <button class="btn btn-success"><input type="checkbox" name="time" value="10:00 P.M" id=""> 10:00 P.M</button>  
  
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
        
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
     
</html>